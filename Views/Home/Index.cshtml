<div class="tools-page">
    <div class="container mt-5 mb-5">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold mb-3">Security Tools</h1>
            <p class="lead hero-desc">Practical tools to help you with password security and more</p>
        </div>

        <!-- Password Generator Section -->
        <div class="tool-card mb-5">
            <h2 class="h3 mb-4">Password Generator</h2>
            <p class="text-muted mb-4">Generate strong, secure passwords with customizable options</p>
            <div class="tool-options mb-4">
                <div class="mb-3">
                    <label for="pwdLength" class="form-label">Password Length: <span id="lengthValue">12</span></label>
                    <input type="range" class="form-range" id="pwdLength" min="8" max="32" value="12">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="includeUppercase" checked>
                            <label class="form-check-label" for="includeUppercase">Uppercase Letters (A-Z)</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="includeLowercase" checked>
                            <label class="form-check-label" for="includeLowercase">Lowercase Letters (a-z)</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="includeNumbers" checked>
                            <label class="form-check-label" for="includeNumbers">Numbers (0-9)</label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="includeSymbols" checked>
                            <label class="form-check-label" for="includeSymbols">Symbols (!@@#$%...)</label>
                        </div>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary btn-lg mb-3" onclick="generatePassword()">Generate Password</button>
            <div class="result-container">
                <div class="input-group mb-2">
                    <input type="text" class="form-control form-control-lg" id="generatedPassword" readonly placeholder="Your password will appear here">
                    <button class="btn btn-outline-secondary" onclick="copyPassword()">Copy</button>
                </div>
            </div>
        </div>

        <!-- Password Strength Checker Section -->
        <!-- This tool analyzes password strength based on length and character variety, providing real-time feedback -->
        <div class="tool-card">
            <h2 class="h3 mb-4">Password Strength Checker</h2>
            <p class="text-muted mb-4">Check the strength of your password and get security recommendations</p>
            <div class="mb-4">
                <label for="checkPassword" class="form-label">Enter Password to Check:</label>
                <input type="password" class="form-control form-control-lg" id="checkPassword" placeholder="Type your password here" oninput="checkPasswordStrength()">
            </div>
            <div id="strengthResult" class="strength-result">
                <div class="strength-bar-container mb-3">
                    <div class="strength-bar" id="strengthBar"></div>
                </div>
                <div id="strengthText" class="strength-text mb-3"></div>
                <div id="strengthFeedback" class="strength-feedback"></div>
            </div>
        </div>
    </div>
</div>

